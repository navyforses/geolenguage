{
  "name": "digital-oligopoly-forecast",
  "version": "2.0.0",
  "description": "Real-time analysis and forecasting system for global digital platforms",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "start": "npm run start --workspace=backend",
    "db:migrate": "npm run migrate --workspace=backend",
    "db:seed": "npm run seed --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "digital-platforms",
    "forecasting",
    "analytics",
    "ai",
    "claude",
    "tech-giants"
  ],
  "author": "DigitalOracle",
  "license": "MIT"
}
